// apps/api/src/services/partner-notifications.js
const { supabase } = require('../config/supabase');
const { sendEmail } = require('./email-service');

class PartnerNotificationService {
  // Notificar nova indica√ß√£o
  async notifyNewReferral(partnerId, referralData) {
    try {
      // Buscar dados do parceiro
      const { data: partner, error: partnerError } = await supabase
        .from('partners')
        .select('email, contact_person, email_notifications')
        .eq('id', partnerId)
        .single();

      if (partnerError || !partner.email_notifications) return;

      // Criar notifica√ß√£o no banco
      await supabase
        .from('partner_notifications')
        .insert({
          partner_id: partnerId,
          type: 'new_referral',
          title: 'Nova Indica√ß√£o Recebida!',
          message: `Voc√™ indicou um novo cliente: ${referralData.client_email}`,
          data: referralData,
          read: false
        });

      // Enviar email
      const emailData = {
        to: partner.email,
        subject: 'üéâ Nova Indica√ß√£o Registrada!',
        template: 'partner-new-referral',
        data: {
          partner_name: partner.contact_person,
          client_email: referralData.client_email,
          referral_code: referralData.referral_code,
          tracking_url: `${process.env.FRONTEND_URL}/partner/dashboard`
        }
      };

      await sendEmail(emailData);

    } catch (error) {
      console.error('Erro ao notificar nova indica√ß√£o:', error);
    }
  }

  // Notificar convers√£o
  async notifyConversion(partnerId, conversionData) {
    try {
      const { data: partner, error: partnerError } = await supabase
        .from('partners')
        .select('email, contact_person, email_notifications')
        .eq('id', partnerId)
        .single();

      if (partnerError || !partner.email_notifications) return;

      // Criar notifica√ß√£o no banco
      await supabase
        .from('partner_notifications')
        .insert({
          partner_id: partnerId,
          type: 'conversion',
          title: 'Convers√£o Realizada! üí∞',
          message: `Cliente ${conversionData.client_email} converteu! Comiss√£o: R$ ${conversionData.commission_amount}`,
          data: conversionData,
          read: false
        });

      // Enviar email
      const emailData = {
        to: partner.email,
        subject: 'üí∞ Convers√£o Confirmada - Comiss√£o Gerada!',
        template: 'partner-conversion',
        data: {
          partner_name: partner.contact_person,
          client_email: conversionData.client_email,
          commission_amount: conversionData.commission_amount,
          plan_name: conversionData.plan_name,
          dashboard_url: `${process.env.FRONTEND_URL}/partner/dashboard`
        }
      };

      await sendEmail(emailData);

    } catch (error) {
      console.error('Erro ao notificar convers√£o:', error);
    }
  }

  // Notificar pagamento processado
  async notifyPaymentProcessed(partnerId, paymentData) {
    try {
      const { data: partner, error: partnerError } = await supabase
        .from('partners')
        .select('email, contact_person, email_notifications')
        .eq('id', partnerId)
        .single();

      if (partnerError || !partner.email_notifications) return;

      // Criar notifica√ß√£o no banco
      await supabase
        .from('partner_notifications')
        .insert({
          partner_id: partnerId,
          type: 'payment_processed',
          title: 'Pagamento Processado! üè¶',
          message: `Comiss√£o de R$ ${paymentData.amount} foi processada e estar√° dispon√≠vel em 2-3 dias √∫teis`,
          data: paymentData,
          read: false
        });

      // Enviar email
      const emailData = {
        to: partner.email,
        subject: 'üè¶ Pagamento de Comiss√µes Processado',
        template: 'partner-payment',
        data: {
          partner_name: partner.contact_person,
          amount: paymentData.amount,
          payment_method: paymentData.payment_method,
          estimated_date: paymentData.estimated_date,
          transaction_id: paymentData.transaction_id
        }
      };

      await sendEmail(emailData);

    } catch (error) {
      console.error('Erro ao notificar pagamento:', error);
    }
  }

  // Buscar notifica√ß√µes do parceiro
  async getNotifications(partnerId, limit = 20, offset = 0) {
    try {
      const { data, error } = await supabase
        .from('partner_notifications')
        .select('*')
        .eq('partner_id', partnerId)
        .order('created_at', { ascending: false })
        .range(offset, offset + limit - 1);

      if (error) throw error;
      return data;
    } catch (error) {
      console.error('Erro ao buscar notifica√ß√µes:', error);
      return [];
    }
  }

  // Marcar notifica√ß√£o como lida
  async markAsRead(notificationId, partnerId) {
    try {
      const { error } = await supabase
        .from('partner_notifications')
        .update({ read: true, read_at: new Date() })
        .eq('id', notificationId)
        .eq('partner_id', partnerId);

      return !error;
    } catch (error) {
      console.error('Erro ao marcar como lida:', error);
      return false;
    }
  }

  // Marcar todas como lidas
  async markAllAsRead(partnerId) {
    try {
      const { error } = await supabase
        .from('partner_notifications')
        .update({ read: true, read_at: new Date() })
        .eq('partner_id', partnerId)
        .eq('read', false);

      return !error;
    } catch (error) {
      console.error('Erro ao marcar todas como lidas:', error);
      return false;
    }
  }

  // Contar notifica√ß√µes n√£o lidas
  async getUnreadCount(partnerId) {
    try {
      const { count, error } = await supabase
        .from('partner_notifications')
        .select('*', { count: 'exact', head: true })
        .eq('partner_id', partnerId)
        .eq('read', false);

      if (error) throw error;
      return count || 0;
    } catch (error) {
      console.error('Erro ao contar n√£o lidas:', error);
      return 0;
    }
  }
}

module.exports = new PartnerNotificationService();